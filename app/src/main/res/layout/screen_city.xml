<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/sky">

    <ImageView
        android:id="@+id/cityImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/city"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
      />

    <fragment
        android:id="@+id/listCity"
        android:name="com.geekbrains.onlinelessons.android.one.weatherapp.ContainerFragment"
        android:layout_width="wrap_content"
        android:layout_height="359dp"
        app:layout_constraintBottom_toTopOf="@+id/fragmentChange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.078"
        app:layout_constraintStart_toStartOf="@+id/cityImage"
        app:layout_constraintTop_toBottomOf="@+id/inputCity" />

    <FrameLayout
        android:id="@+id/fragmentChange"
        android:layout_width="362dp"
        android:layout_height="180dp"
        app:layout_constraintBottom_toBottomOf="@+id/cityImage"
        app:layout_constraintEnd_toEndOf="@+id/cityImage"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="@+id/cityImage" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputCity"
        android:layout_width="226dp"
        android:layout_height="53dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="172dp"
        app:layout_constraintBottom_toTopOf="@+id/fragmentChange"
        app:layout_constraintStart_toStartOf="@+id/cityImage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.114">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputLoginCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/input_city"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="@string/accept"
        app:layout_constraintBottom_toBottomOf="@+id/inputCity"
        app:layout_constraintEnd_toEndOf="@+id/cityImage"
        app:layout_constraintStart_toEndOf="@+id/inputCity"
        app:layout_constraintTop_toTopOf="@+id/inputCity"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>